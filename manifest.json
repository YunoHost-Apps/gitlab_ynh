{
    "name": "Gitlab",
    "id": "gitlab",
    "packaging_format": 1,
    "version": "11.10.4~ynh4",
    "description": {
        "en": "GitLab is a Git-repository manager.",
        "fr": "GitLab est un gestionnaire de dépôts Git."
    },
    "url": "https://gitlab.com",
    "license": "MIT",
    "maintainer": {
        "name": "kay0u",
        "email": "pierre@kayou.io"
    },
    "requirements": {
        "yunohost": ">= 3.5.0"
    },
    "multi_instance": false,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install": [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for gitlab",
                    "fr": "Choisissez un nom de domaine pour gitlab"
                },
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for gitlab",
                    "fr": "Choisissez un chemin pour gitlab"
                },
                "example": "/",
                "default": "/"
            },
            {
                "name": "admin",
                "type": "user",
                "ask": {
                    "en": "Choose an admin user",
                    "fr": "Choisissez l’administrateur"
                },
                "example": "johndoe"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            },
            {
                "name": "use_web_account",
                "type": "boolean",
                "ask": {
                    "en": "Allow account creation via the gitlab web interface?",
                    "fr": "Autoriser la création de compte via l'interface web de gitlab ?"
                },
                "default": false
            }
        ]
    }
}
