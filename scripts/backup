#!/bin/bash

#=================================================
# IMPORT GENERIC HELPERS
#=================================================

# Keep this path for calling _common.sh inside the execution's context of backup and restore scripts
source ../settings/scripts/_common.sh
source /usr/share/yunohost/helpers

ynh_print_info "Declaring files to be backed up..."

#=================================================
# BACKUP THE NGINX CONFIGURATION
#=================================================

ynh_backup "/etc/nginx/conf.d/$domain.d/$app.conf"

# Backup GitLab Pages nginx config if enabled
if [ "$pages_enable" -eq 1 ]; then
	ynh_backup "/etc/nginx/conf.d/${pages_url}.d/${app}-pages.conf"
fi

#=================================================
# BACKUP GITLAB DATABASE
#=================================================

# See https://github.com/YunoHost-Apps/gitlab_ynh/issues/300

chmod 755 $install_dir

# Use gitlab-backup to backup
# For the complete doc: https://docs.gitlab.com/ce/raketasks/backup_restore.html
# For the filename: https://docs.gitlab.com/ce/raketasks/backup_restore.html#backup-filename
gitlab-backup create BACKUP=last

ynh_backup "/var/opt/$app/backups/last_gitlab_backup.tar"

#=================================================
# BACKUP CONF FILES
#=================================================

config_path=/etc/$app
ynh_backup "$config_path/gitlab-secrets.json"
ynh_backup "$config_path/gitlab.rb"
ynh_backup "$config_path/gitlab-persistent.rb"

#=================================================
# END OF SCRIPT
#=================================================

ynh_print_info "Backup script completed for $app. (YunoHost will then actually copy those files to the archive)."
